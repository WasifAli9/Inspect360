# =============================================================================
# Inspect360 - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# PostgreSQL database connection string
# You can use Neon (https://neon.tech), Supabase, or any PostgreSQL provider
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# =============================================================================
# SESSION CONFIGURATION (REQUIRED)
# =============================================================================
# Secret key for session encryption - MUST be random and secure in production
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-key-here

# =============================================================================
# STRIPE CONFIGURATION (REQUIRED for payments)
# =============================================================================
# Get these from https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development, live keys (sk_live_...) for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# RESEND CONFIGURATION (REQUIRED for email)
# =============================================================================
# Get API key from https://resend.com/api-keys
# IMPORTANT: You must verify your sending domain in Resend dashboard
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# OPENAI CONFIGURATION (REQUIRED for AI features)
# =============================================================================
# Get API key from https://platform.openai.com/api-keys
# The application uses GPT-4 Vision for inspection analysis and comparisons
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# OBJECT STORAGE CONFIGURATION (OPTIONAL - defaults to local filesystem)
# =============================================================================
# By default, files are stored in ./storage directory
# You can customize the storage location:
LOCAL_STORAGE_DIR=./storage
PRIVATE_OBJECT_DIR=private
PUBLIC_OBJECT_SEARCH_PATHS=public

# For Google Cloud Storage (optional):
# Uncomment and configure if you want to use GCS instead of local storage
# GCS_BUCKET_NAME=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# SERVER CONFIGURATION (OPTIONAL)
# =============================================================================
# Port the server will listen on (defaults to 5000)
PORT=5000

# Node environment (development or production)
NODE_ENV=production

# =============================================================================
# REPLIT-SPECIFIC (Only used when running on Replit)
# =============================================================================
# These are automatically provided by Replit - do not set manually
# REPLIT_CONNECTORS_HOSTNAME
# REPL_IDENTITY
# WEB_REPL_RENEWAL
# REPLIT_DEPLOYMENT
